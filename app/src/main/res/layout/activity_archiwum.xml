<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".Aktywnosci.Archiwum" android:background="#5E5E5E">

    <EditText
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/filtrowanie_tekst" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.045" android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF" android:textColorHint="#FFFFFF" android:textColorLink="#FFFFFF"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" android:hint="WYSZUKAJ"
            app:layout_constraintBottom_toBottomOf="parent" android:focusable="true"/>
    <Button
            android:text="FILTRUJ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/filtrowanie_przycisk" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#FFFFFF" android:backgroundTint="#8BC34A" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.137" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Usuń Partię"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/usun_partie" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.893"
            android:textColor="#FFFFFF" android:backgroundTint="#C34A4A" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Zobacz partię"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/zobacz_partie" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.976"
            android:textColor="#FFFFFF" android:backgroundTint="#8BC34A" app:layout_constraintHorizontal_bias="0.0"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/lista_arch"
            app:layout_constraintTop_toBottomOf="@+id/filtrowanie_przycisk" app:layout_constraintHorizontal_bias="0.653"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/usun_partie"/>
</androidx.constraintlayout.widget.ConstraintLayout>